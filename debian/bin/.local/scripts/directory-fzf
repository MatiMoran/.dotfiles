#!/bin/bash

HOME_DIRS=$(fdfind -H -d 1 . $(echo $REPOS))

if [ "$(pwd)" = "$HOME" ]; then
    PWD_DIRS=""
else
    PWD_DIRS=$(fdfind -H . .)
fi

DESTINATION=$(echo $HOME_DIRS $PWD_DIRS | fzf)

if [ -d "$DESTINATION" ]; then
    cd $DESTINATION
elif [ -f "$DESTINATION" ]; then
    open $DESTINATION
fi
